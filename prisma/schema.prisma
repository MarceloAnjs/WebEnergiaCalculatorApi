// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id String @id @default(uuid())
  email String @unique
  createdAt DateTime @default(now())

  equipment Equipment[]
  history History[]

  @@map("users")
}

model Equipment {
  id String @id @default(uuid())
  name String
  quantity Decimal
  time  String
  power Decimal
  createdAt DateTime @default(now())

  user Users @relation(fields: [userId], references: [id])
  userId String

  @@map("equipment")
}

model History {
  id String @id @default(uuid())
  cost Decimal
  consumption Decimal
  fare Decimal
  equipments Json
  createdAt DateTime @default(now())
  
  user Users @relation(fields: [userId], references: [id])
  userId String

  @@map("history")
}